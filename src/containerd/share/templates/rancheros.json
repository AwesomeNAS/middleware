{
    "template": {
        "name": "rancheros",
        "capabilities": {
            "docker_host": true
        }
    },
    "config" : {
        "ncpus" : 1,
        "bootloader" : "GRUB",
        "memsize" : 4096,
        "boot_directory": "../rancheros",
        "cloud_init": "../rancheros/cloud-init.yml"
    },
    "devices" : [
        {
            "type" : "NIC",
            "name" : "mgmt",
            "properties" : {
                "type": "MANAGEMENT"
            }
        },
        {
            "type" : "NIC",
            "name" : "bridge",
            "properties" : {
                "type": "BRIDGE"
            }
        },
        {
            "type": "VOLUME",
            "name": "docker-storage",
            "properties": {
                "access_method": "NFS"
            }
        }
    ],
    "type" : "VM"
}
