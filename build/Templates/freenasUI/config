[Package]

name = freenasUI
comment = "FreeNAS User Interface"
desc = "FreeNAS UI (django-based)"
www = http://www.freenas.org/
origin = freenas/ui
maintainer = dev@ixsystems.com
prefix = /
arch = freebsd:9:x86:64
licenselogic = or
licenses = [BSD, MIT, GPL]

[Files]
include = /usr/local/www/freenasUI

[Scripts]

# Fresh installs don't need this.
# However, if the package name changed, we would.

post-install = test -f /data/freenas-v1.db && /usr/local/bin/python /usr/local/www/freenasUI/manage.py migrate --all

post-upgrade = /usr/local/bin/python /usr/local/www/freenasUI/manage.py migrate --all
