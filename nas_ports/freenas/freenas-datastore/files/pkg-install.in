#!/bin/sh

PATH=/sbin:/bin:/usr/sbin:/usr/bin::/usr/local/sbin:/usr/local/bin
FACTORY_DB=/usr/local/share/datastore/factory.json

pre-install()
{
}

post-install()
{
	if [ ! -d /data ]; then
		rm -fr /data
		mkdir -p /data
	fi

	mount -t devfs devfs /dev
	service datastore init
	service datastore start
	dsrestore -c /usr/local/etc/middleware.conf -f ${FACTORY_DB}
	service datastore stop
	sleep 5
	umount -f /dev
}

backupwarning()
{
}




case $2 in
PRE-INSTALL)
	pre-install
	exit 0
        ;;
POST-INSTALL)
	post-install
	exit 0
	;;
BACKUPWARNING)
	backupwarning
	exit 0
	;;
*)
	exit 1
	;;
esac
